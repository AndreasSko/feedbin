<% present entry do |entry_presenter| %>
  <div class="quoted-tweet">
    <h1>
      <a href="<%= entry_presenter.tweet_user_url(reply) %>" target="_blank">
        <%= entry_presenter.tweet_name(reply) %>
        <span><%= entry_presenter.tweet_screen_name(reply) %></span>
      </a>
    </h1>
    <p class="tweet-text"><%= @entry.tweet_text(reply, true) %></p>
  </div>
<% end %>