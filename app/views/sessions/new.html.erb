<% @class = 'login' %>
<div class="login-wrap">
    <a href="/" class="logo hide-text">Feedbin</a>
    <div class="box">
        <%= render partial: 'shared/flash', locals: {flash: flash} %>
        <h3 class="box-header">Welcome Back</h3>
        <%= form_tag sessions_path, {class: 'combined-form', novalidate: true} do %>
            <div class="input-group">
                <%= email_field_tag :email, params[:email], autofocus: true, tabindex: '1', placeholder: 'Email', class: "text" %>
                <span class="input-helper"></span>
            </div>
            <div class="input-group">
                <%= password_field_tag :password, nil, tabindex: '2', placeholder: 'Password', class: "text" %>
                <span class="input-helper"></span>
            </div>

            <button type="submit" class="button" tabindex="3">Login</button>
            <%= link_to "Forgot password?", new_password_reset_path, class: 'large forgot-link' %>
        <% end %>
    </div>
    <p class="align-center x-large muted">Donâ€™t have an account? <%= link_to "Sign up", signup_path %></p>
</div>
