<div class="entry-settings">
  <div class="setting-wrap font-settings">
    <%= form_tag settings_font_path, remote: true do %>
      <%= select_tag "font", options_for_select(Feedbin::Application.config.fonts, @user.font || 'default'), data: {behavior: 'change_font'} %>
    <% end %>
  </div>
  <div class="setting-wrap">
    <%= link_to settings_font_decrease_path, remote: true, method: :post, class: 'button-decrease-font', data: {behavior: 'decrease_font'} do %>
      <%= svg_tag 'icon-smaller-text', size: '48x48' %>
    <% end %>
  </div>
  <div class="setting-wrap">
    <%= link_to settings_font_increase_path, remote: true, method: :post, class: 'button-increase-font', data: {behavior: 'increase_font'} do %>
      <%= svg_tag 'icon-larger-text', size: '48x48' %>
    <% end %>
  </div>
  <div class="setting-wrap mobile-hide">
    <%= link_to settings_entry_width_path, remote: true, method: :post, class: 'button-entry-width', data: {behavior: 'entry_width'} do %>
      <%= svg_tag 'icon-entry-width-fixed', size: '34x24' %>
      <%= svg_tag 'icon-entry-width-fluid', size: '34x24' %>
    <% end %>
  </div>
  <div class="setting-wrap mobile-hide">
    <div class="button-full-screen" data-behavior="full_screen">
      <%= svg_tag 'icon-full-screen-open', size: '34x26' %>
      <%= svg_tag 'icon-full-screen-close', size: '34x26' %>
    </div>
  </div>
  <%= link_to settings_theme_path, remote: true, method: :post, class: 'setting-wrap theme-settings', data: {behavior: 'switch_theme'} do %>
    <%= svg_tag 'icon-theme-day', class: 'button-theme-day', size: '18x18' %>
    <%= svg_tag 'icon-theme-night', class: 'button-theme-night', size: '17x19' %>
  <% end %>
</div>
