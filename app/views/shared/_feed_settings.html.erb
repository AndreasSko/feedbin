<div class="basement-toolbar feed-settings">
    <div class="toolbar-item">
        <%= form_for entry.feed, remote: true, url: feed_rename_path(entry.feed.id), autocomplete: 'off' do |f| %>
        <%= f.text_field :title, placeholder: entry.feed.original_title, namespace: entry.feed.id, spellcheck: false, data: {behavior: 'user_title', feed_id: entry.feed.id} %>
        <% end %>
    </div>
    <%= link_to "Visit Site", entry.feed.site_url, class: "toolbar-item", target: "_blank", rel: 'noopener' %>
    <%= link_to "Unsubscribe", feed_destroy_subscription_url(entry.feed), class: "toolbar-item danger", method: :delete, remote: true, data: { confirm: "Are you sure you want to unsubscribe from #{entry.feed.title}?" } %>
</div>
