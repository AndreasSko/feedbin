<% present entry do |entry_presenter| %>
  <div class="quoted-tweet">
    <h1>
      <a href="<%= entry_presenter.tweet_user_url(quoted_tweet) %>" target="_blank">
        <%= entry_presenter.tweet_name(quoted_tweet) %>
        <span><%= entry_presenter.tweet_screen_name(quoted_tweet) %></span>
      </a>
      <time class="timeago" datetime="<%= quoted_tweet.created_at.iso8601 %>"><%= quoted_tweet.created_at.to_s(:full_human) %></time>
    </h1>
    <%= entry_presenter.tweet_in_reply_to(quoted_tweet) %>
    <p class="tweet-text"><%= entry_presenter.tweet_text(quoted_tweet, true) %></p>
  </div>
<% end %>

