<div class="settings-content-inner">
  <div class="clearfix">
      <div class="half float-right">
          <%= form_tag(admin_users_path, method: "get") do %>
              <input name="q" type="text" class="feed-search" data-behavior="user_search" placeholder="Search Customers" />
          <% end %>
      </div>
      <div class="half por">
          <h2>Customer Admin</h2>
      </div>
  </div>

  <ul class="pill-list">
    <% @users.each do |user| %>
      <li>
        <% if user.deleted? %>
          <strike><%= link_to user.email, user.stripe_url %></strike>
        <% else %>
          <%= link_to user.email, user.stripe_url %>
          <%= link_to "Delete", admin_user_path(user), remote: true, data: { confirm: "Are you sure?" }, method: :delete, class: 'button pull-right button-danger' %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>