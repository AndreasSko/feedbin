<div class="service-options-wrap">
    <div class="service-options">
        <p>You can find your API token on your <a href="https://pinboard.in/settings/password" target="_blank" rel="noopener noreferrer">Pinboard Password page</a>.</p>
        <%= form_for(record) do |f| %>
            <%= f.hidden_field :service_id, value: sharing_service[:service_id] %>
            <%= f.hidden_field :operation, value: 'authorize' %>
            <div class="stacked-form">
                <%= render "shared/input" do %>
                    <%= password_field_tag 'password', '', placeholder: 'API Token', class: 'no-margin' %>
                <% end %>
            </div>
            <div class="button-wrap">
                <%= button_tag 'Cancel', type: "button", class: 'button button-secondary button-inline', data: {behavior: "toggle_service_options"} %>
                <%= submit_tag "Save", class: 'button button-primary-plain' %>
            </div>
        <% end %>
    </div>
</div>
