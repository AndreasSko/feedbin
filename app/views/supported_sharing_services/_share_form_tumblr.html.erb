<div class="share-form">
  <h2>Publish to Tumblr</h2>
  <%= form_tag('', remote: true) do %>
  <%= hidden_field_tag :url, '', class: 'url-placeholder' %>
  <div class="field-cluster">
    <%= text_area_tag :description, '', rows: 5, placeholder: 'Description (Markdown enabled)', class: 'description-placeholder' %>
    <%= text_field_tag :tags, '', placeholder: 'Tags (comma separated)' %>
  </div>
  <div class="share-controls">
    <div class="control">
      Publish to <select name="site" class="tumblr-hosts-placeholder"></select>
    </div>
    <div class="control">
      Status <%= select_tag "status", options_for_select({'Published' => 'published', 'Draft' => 'draft'}, "published") %>
    </div>
  </div>
  <div class="button-wrap">
    <%= submit_tag "Publish", class: 'button' %>
    <%= button_tag "Cancel", class: 'button button-text', data: {behavior: 'close_entry_basement'} %>
  </div>
  <% end %>
</div>