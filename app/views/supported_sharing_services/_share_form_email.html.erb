<div class="share-form">
  <div class="share-form-inner icon-share-email">
    <h2>Send Article via Email</h2>
    <%= form_tag('', remote: true) do %>
    <%= hidden_field_tag :readability, 'off', class: 'readability-placeholder' %>
    <div class="field-cluster">
      <%= text_field_tag :to, '', placeholder: 'To' %>
      <%= text_field_tag :subject, '', placeholder: 'Subject', class: 'title-placeholder' %>
      <%= text_area_tag :body, '', rows: 5, class: 'description-placeholder' %>
    </div>
    <div class="button-wrap">
      <%= submit_tag "Send", class: 'button' %>
      <%= button_tag "Cancel", class: 'button button-text', data: {behavior: 'close_entry_basement'} %>
    </div>
    <% end %>
  </div>
</div>