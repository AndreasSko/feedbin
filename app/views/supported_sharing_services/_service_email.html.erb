<% if status == :active %>
  <%= render partial: "delete_supported_service", locals: {sharing_service: sharing_service} %>
<% else %>
  <p class="service-title <%= "icon-share-#{sharing_service.service_id}" %>"><%= sharing_service.label %></p>
  <%= link_to 'Activate', '#', class: 'list-action show-service-options', data: {behavior: "show_service_options"} %>
  <div class="service-options hide">
    <%= form_tag supported_sharing_services_path(sharing_service.service_id) do %>
      <%= text_field_tag 'email_name', '', placeholder: 'Full Name', class: 'no-margin' %>
      <%= email_field_tag 'email_address', '', placeholder: 'Reply-to' %>

      <%= link_to 'Cancel', '#', class: 'action-button button-danger button-link cancel-button', data: {behavior: "hide_service_options"} %>
      <%= submit_tag "Save", class: 'action-button button button-primary' %>
    <% end %>
  </div>
<% end %>
