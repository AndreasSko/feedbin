<%= form_for(@subscription) do |f| %>
<div class="settings-content-inner feed-profile">
    <div class="settings-outer">
        <h2>Feeds</h2>
    </div>
    <div class="inset">
        <ul class="control-group">
            <li>
                <div class="header clearfix">
                    <div class="half">
                        <h3><a href="<%= @subscription.feed.site_url %>"><%= @subscription.title || @subscription.feed.title %></a></h3>
                        <p class="subhead"><a href="<%= @subscription.feed.feed_url %>"><%= @subscription.feed.feed_url %></a></p>
                    </div>
                    <div class="half text-right">
                        Unsubscribe
                    </div>
                </div>
                <div class="chart-wrap">
                    <div class="y-axis">
                        <div class="start">100</div>
                        <div class="middle">50</div>
                        <div class="end">0</div>
                    </div>
                    <div class="graph">
                        <% 1.upto(30) do |count| %>
                           <div style="height: <%=  rand(1..100) %>%;"></div>
                        <% end %>
                    </div>
                </div>
                <!-- <div class="x-axis">
                    <div class="y-axis">

                    </div>
                    <div class="graph">
                        <div class="start">9/25</div>
                        <div class="middle">10/09</div>
                        <div class="end">10/20</div>
                    </div>
                </div> -->
            </li>
        </ul>

        <div class="inset-content">
            <h4 class="group-header">Feed Options</h4>
        </div>
        <ul class="control-group control-group-form">
            <li>
                <%= f.check_box :muted %>
                <%= f.label :muted do %>
                    Muted <span class="slider-checkbox"></span>
                <% end %>
            </li>
            <li>
                <%= f.check_box :show_updates %>
                <%= f.label :show_updates do %>
                    Show updates <span class="slider-checkbox"></span>
                <% end %>
            </li>
        </ul>
        <p class="control-group-description">
            Tells you when an article has been changed after being published
        </p>

        <div class="description-inset">
          <%= f.submit "Save", class: "button-plain no-margin" %>
        </div>

    </div>
</div>
<% end %>
