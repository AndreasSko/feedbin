<h5>Feeds Available</h5>
<%= form_tag subscriptions_path, method: :post do %>
  <% feeds.each do |feed| %>
    <%= fields_for "feeds[]", feed do |pf| %>
      <div class="subscription-option">
        <div class="category" data-behavior="selected_category">
          <span data-behavior="category_title" class="title">Uncategorized</span>
          <ul data-behavior="categories" class="categories">
            <li class="selected">Uncategorized</li>
            <% @user.feed_tags.each do |tag| %>
              <li><%= tag.name %></li>
            <% end %>
          </ul>
        </div>
        <div class="title">
          <%= pf.text_field :title, placeholder: feed.title %>
          <p class="feed-url" title="Feed URL"><%= feed.feed_url %></p>
        </div>
        <div class="action">
          <div class="check-toggle">
            <%= pf.check_box :id, checked: false, data: {behavior: "check_toggle"} %>
            <%= pf.label :id, class: "button button-bordered" do %>
              <span class="off">+ Add</span>
              <span class="on"><%= svg_tag 'icon-check', size: '15x12' %></span>
            <% end %>
          </div>
        </div>
      </div>
     <% end %>
  <% end %>
<% end %>