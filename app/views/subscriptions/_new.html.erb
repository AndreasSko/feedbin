<%= form_tag subscriptions_path, method: :post, remote: true, data: {behavior: "subscription_options"} do %>
  <% feeds.each_with_index do |feed, index| %>
    <%= fields_for "feeds[]", feed do |pf| %>
      <div class="subscription-option">
        <div class="category" data-behavior="selected_category">
            <%= pf.text_field :tags, placeholder: "Tags" %>
        </div>
        <div class="title">
          <%= pf.text_field :title, placeholder: feed.title %>
          <p class="feed-url" title="Feed URL"><%= feed.feed_url %></p>
        </div>
        <div class="action">
          <div class="check-toggle">
            <%= pf.check_box :id, checked: index == 0 ? true : false, data: {behavior: "check_toggle"} %>
            <%= pf.label :id, class: "button button-bordered" do %>
              <span class="off"><%= svg_tag 'icon-plus', size: '12x12' %></span>
              <span class="on"><%= svg_tag 'icon-check', size: '15x12' %></span>
            <% end %>
          </div>
        </div>
      </div>
     <% end %>
  <% end %>
<% end %>
