<%= component "settings/control_row" do |row| %>
  <% if action.title.present? %>
    <% row.title { action.title } %>
  <% end %>
  <% row.description do %>
    <%= render(partial: "actions/text_description", locals: {action: action}) %>
  <% end %>
  <% row.control do %>
    <% if action.broken? %>
      <%= svg_tag "icon-error-message" %>
    <% end %>
    <%= link_to "Edit", edit_action_path(action), class: "button button-secondary", title: action.broken? ? "Invalid Action" : ""  %>
  <% end %>
<% end %>
