<div class="mb-14">
  <div <%= tag.attributes(@options) %>>
    <%= header %>
    <% if items? %>
      <ul class="border-y">
        <% items.each do |item| %>
          <li class="border-b last:border-b-0">
            <%= item %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
